{
  "version": "1.0.0",
  "role": "US_CBL",
  "description": "US Computer Based Learning kiosk configuration",
  "author": "Joshua Walderbach",
  "lastModified": "2025-12-03",
  "checks": [
    {
      "id": "1",
      "name": "Google Chrome Not Installed",
      "type": "Application",
      "enabled": true,
      "properties": {
        "applicationName": "Google Chrome",
        "ensureInstalled": false,
        "searchPaths": [
          "C:\\Program Files*\\Google\\Chrome\\Application\\chrome.exe",
          "C:\\Users\\*\\AppData\\Local\\Google\\Chrome\\Application\\chrome.exe"
        ],
        "uninstallPaths": [
          "C:\\Program Files*\\Google\\Chrome\\Application\\*\\Installer\\setup.exe",
          "C:\\Users\\*\\AppData\\Local\\Google\\Chrome\\Application\\*\\Installer\\setup.exe"
        ],
        "uninstallArguments": "--uninstall --multi-install --chrome --system-level --force-uninstall"
      }
    },
    {
      "id": "2",
      "name": "Desktop Folders Cleared",
      "type": "FolderEmpty",
      "enabled": true,
      "properties": {
        "paths": [
          "$env:PUBLIC\\Desktop",
          "$env:USERPROFILE\\Desktop"
        ],
        "includeAllUserProfiles": true
      }
    },
    {
      "id": "3",
      "name": "Start Menu Contains Only Allowed Shortcuts",
      "type": "ShortcutsAllowList",
      "enabled": true,
      "properties": {
        "path": "C:\\ProgramData\\Microsoft\\Windows\\Start Menu\\Programs",
        "allowedShortcuts": [
          "GTA Time Clock.lnk",
          "Live Better U.lnk",
          "OneWalmart.lnk",
          "On-Screen Keyboard.lnk",
          "Time Adjustment.lnk",
          "Two-Step Verification.lnk",
          "ULearn.lnk",
          "Volume.lnk",
          "Walmart Academy.lnk",
          "Walmart Careers.lnk"
        ]
      }
    },
    {
      "id": "4",
      "name": "User Account Pictures Present",
      "type": "FolderHasFiles",
      "enabled": true,
      "properties": {
        "path": "C:\\ProgramData\\Microsoft\\User Account Pictures",
        "minimumFileCount": 1,
        "sourceAssetPath": "AccountPictures"
      }
    },
    {
      "id": "5",
      "name": "Icon Files Present",
      "type": "FilesExist",
      "enabled": true,
      "properties": {
        "destinationPath": "C:\\Walmart Applications\\Desktop Icons",
