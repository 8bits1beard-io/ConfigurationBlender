          "GTA_Time_Clock.ico",
          "Live_Better_U.ico",
          "OneWalmart.ico",
          "Time_Adjustment.ico",
          "Two-Step_Verification.ico",
          "ULearn.ico",
          "Walmart_Academy.ico",
          "Walmart_Careers.ico"
